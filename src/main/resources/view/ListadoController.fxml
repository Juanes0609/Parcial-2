<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" 
      styleClass="root-container" 
      stylesheets="@styles1.css"
      xmlns="http://javafx.com/javafx/23" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="co.edu.uniquindio.poo.controllers.ListadoController">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label styleClass="title" text="Listado de Inmuebles">
        <font>
            <Font name="System Bold" size="28" />
        </font>
    </Label>

    <VBox styleClass="card-panel" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label styleClass="section-title" text="Inventario Completo">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaInmuebles" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTipo" prefWidth="77.60000878572464" text="Tipo" />
                <TableColumn fx:id="colCiudad" prefWidth="124.79999542236328" text="Ciudad" />
                <TableColumn fx:id="colNumPisos" prefWidth="92.00001525878906" text="NÃºmero pisos" />
                <TableColumn fx:id="colHabitaciones" prefWidth="84.79998779296875" text="Habitaciones" />
                <TableColumn fx:id="colPrecio" prefWidth="91.20001220703125" text="Precio" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button fx:id="btnBack" onAction="#onBackToDashboard" text="Volver al Dashboard" />
            <Button fx:id="btnDelete" onAction="#onDeleteButton" text="Eliminar Inmueble" />
        </HBox>
    </VBox>

</VBox>